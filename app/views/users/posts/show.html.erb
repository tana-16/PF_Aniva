<div>
  <%= attachment_image_tag @post, :image %>
  <p>説明：<%= @post.body %></p>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.user == current_user %>
    <%= link_to "削除", posts_path(@post), method: :delete %>
  <% end %>
</div>

<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |post_comment| %>
    <!--<p>%= image_tag('sample-author1.jpg') %></p>-->
    <%= post_comment.user.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.body %>
  <% end %>
</div>
<div>
  <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
    <%= f.text_area :body, rows:'1',placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>