<div>
  <%= link_to user_path(@post.user.id) do %>
    <%= attachment_image_tag @post.user, :profile_image, :fill, 100, 100,  format: 'jpeg', fallback: "no_image.jpg" %>
  <% end %>
  <%= attachment_image_tag @post, :image, :fill, 200, 200 %>
  <p>カテゴリー：<%= @post.category.name %></p>
  <p>説明：<%= @post.body %></p>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.user == current_user %>
    <%= link_to "削除", post_path(@post), method: :delete %>
  <% end %>

  <% if @post.liked_by?(current_user) %>
    <p>
      <%= link_to post_likes_path(@post), method: :delete do %>
        ♥<%= @post.likes.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_likes_path(@post), method: :post do %>
        ♡<%= @post.likes.count %> いいね
      <% end %>
    </p>
  <% end %>
</div>

<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |post_comment| %>
    <!--<p>%= image_tag('sample-author1.jpg') %></p>-->
    <%= post_comment.user.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.body %>
  <% end %>
</div>
<div>
  <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
    <%= f.text_area :body, rows:'1',placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
  <%= link_to "編集", edit_post_path(@post) %>
</div>