<div class="container mt-5">
<% @posts.each do |post| %>
  <div>
    <%= link_to user_path(post.id) do %>
      <%= attachment_image_tag post.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
    <% end %>
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :image, :fill, 100, 100 %>
    <% end %>
    <p>説明：<%= post.body %></p>
    <p>ユーザーネーム：<%= post.user.name %></p>
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
  </div>
<% end %>
</div>
