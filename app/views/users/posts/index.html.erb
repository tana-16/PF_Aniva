<div class="container mt-5 ">
  <% @posts.each do |post| %>
    <div class="row mt-3">
      <div class="col-12 ">
        <div class="card" style="width: 40.5rem;">
          <div class="row mx-2 my-2">
            <div class="col-2">
              <%= link_to user_path(post.user.id) do %>
                <%= attachment_image_tag post.user, :profile_image, :fill, 50, 50,  format: 'jpeg', fallback: "no_image.jpg", class:"rounded-circle" %>
              <% end %>
            </div>
            <div class="col-10 mt-2">
              <%= post.user.name %>
            </div>
          </div>
          <div class="row ml-1">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, :fill, 637, 600 %>
            <% end %>
          </div>
          <div class="my-2 mx-2">
            <% if post.liked_by?(current_user) %>
              <%= link_to post_likes_path(post), method: :delete do %>
                <i class="my-2 mx-2 fas fa-heart fa-lg"></i>
              <% end %>
            <% else %>
              <%= link_to post_likes_path(post), method: :post do %>
                <i class="my-2 mx-2 far fa-heart fa-lg"></i>
              <% end %>
            <% end %>
            <i class="my-2 mx-2 far fa-comment fa-lg"></i>
            <i class="my-2 mx-2 far fa-envelope fa-lg"></i>
          </div>
          <div class="mt-2 ml-4">
            <p>カテゴリー：<%= post.category.name %></p>
          </div>
          <div class="row ml-3">
            <div class="col-11">
              <p>説明：<%= post.body %></p>
            </div>
          </div>
          <div class=" ml-4 ">
            <p>
              <%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
