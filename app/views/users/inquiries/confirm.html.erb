<div class="container">
   <div class="row justify-content-center">
     <div class="p-3 mb-2 text-dark">
      <h3>お問合せ</h3>
        <div class="p-3 mb-2 bg-white text-dark">
          <div class="col-12 mx-auto">
            <%= form_for @inquiry, :url => inquiries_thanks_path do |f| %>
            <table class="row table justify-content-center table-#FFEEFF mx-auto" >
              <tr>
                <th>名前</th>
                <td>
                  <%= f.hidden_field :name %>
                  <%= @inquiry.name %>
                </td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td>
                  <%= f.hidden_field :email %>
                  <%= @inquiry.email %>
                </td>
              </tr>
              <tr>
                <th>お問合せ内容</th>
                <td>
                  <%= f.hidden_field :message %>
                  <%= simple_format(@inquiry.message) %>
                </td>
              </tr>
            </table>
          <div class="row justify-content-center">
            <%= f.submit '送信', :class => 'btn btn-primary' %>
            <!--%= link_to "プロフィールへ",admins_user_path, class: "moe-btn" %>-->
            <% end %>
          </div>
        </div>
      </div>
   </div>
 </div>