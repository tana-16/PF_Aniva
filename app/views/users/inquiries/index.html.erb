<div class="container">
   <div class="row justify-content-center">
     <div class="p-3 mb-2 text-dark">
      <%= form_with model:@inquiry,url:inquiries_confirm_path,method: :post,local: true do |f| %>
        <h3>お問い合わせ</h3>

        <% if @inquiry.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <strong>入力内容にエラーがあります</strong>
            <ul>
              <% @inquiry.errors.each do |attr, msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <table class="row table justify-content-center table-#FFEEFF mx-auto">
          <tr>
            <th>名前<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :name, class:"form-control" %></td>
          </tr>
          <tr>
            <th>メールアドレス<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :email, class:"form-control" %></td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td><%= f.text_area :message, class:"form-control" %></td>
          </tr>
        </table>
        <div class="row justify-content-center">
          <%= f.submit '確認', class: 'btn btn-outline-secondary btn-sm btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>