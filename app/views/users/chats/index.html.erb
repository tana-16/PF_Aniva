<div class="container mt-4">
  <div class="row">
    <div class="col-12 ">
      <h2 class="font-weight-bold">トーク</h2>
      <div class="row ">
        <div class="col-6 ">
          <% if @user.count > 0 %>
            <table class='table'>
              <tbody>
                <% @user.each do |user| %>
                  <tr>
                    <td>
                      <%= link_to user_path(user) do %>
                        <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", class:"rounded-circle" %>
                      <% end %>
                    </td>
                    <td><div class="mt-3 ml-3"><%= user.name %></div></td>
                    <td><div class="mt-3 ml-3"></div><%= link_to 'メッセージ', chat_path(user) %></div></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
          <p>ユーザーはいません</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
