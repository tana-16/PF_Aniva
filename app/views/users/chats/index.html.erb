<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col">
      <% if @user.count > 0 %>
        <table class='table'>
          <thead>
            <th class="font-weight-bold"><h2>トーク</h2></th>
            <th></th>
            <th></th>
          </thead>
          <tbody>
            <% @user.each do |user| %>
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", class:"rounded-circle" %>
                  <% end %>
                </td>
                <td><div class="mt-3 ml-3"><%= user.name %></div></td>
                <td><div class="mt-3 ml-3"><%= link_to 'メッセージ', chat_path(user) %></div></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>

