<br></br>
<table class='table'>
  <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>age</th>
    <th><%= @user.age %></th>
  </tr>
  <tr>
    <th>gender</th>
    <th><%= @user.gender %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to @user.follower.count, user_follows_path(@user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to @user.followed.count, user_followers_path(@user) %></th>
  </tr>

  <% if current_user != @user %>
  <% if current_user.following?(@user) %>
    <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class: "btn btn-success" %>
  <% end %>
<% end %>

<% if current_user != @user && current_user.following?(@user) && @user.following?(current_user) %>
  <%= link_to 'chatを始める', chat_path(@user.id), class: "ml-3" %>
<% end %>



  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <p><%= link_to "投稿", new_post_path(@user) %></p>
  <% end %>

</table>

<% @post.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= attachment_image_tag post, :image, :fill, 200, 200 %>
  <% end %>
  <p>投稿ユーザー画像：<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></p>
  <p>説明：<%= post.body %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
</div>
<% end %>