<div class="container mt-5">
  <div class="row mb-5 border-bottom">
    <div class="col-2">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class:"rounded-circle" %>
    </div>
    <div class="col-9">
      <div class="row">
        <% if @user.id == current_user.id %>
          <div class="col-3"></div>
          <div class="col-3"><%= link_to "プロフィール編集", edit_user_path(@user) %></div>
          <div class="col-3"><%= link_to "投稿", new_post_path(@user) %></div>
        <% end %>
        <% if @user.id != current_user.id %>
          <div class="col-3 my-3"></div>
        <% end %>
      </div>
      <div class="row mt-2">
        <div class="col-3"></div>
        <div class="col-3">投稿 <%= @user.posts.count %> 件</div>
        <div class="col-3">フォロワー <%= link_to @user.followed.count, user_followers_path(@user) %> 人</div>
        <div class="col-3">フォロー中 <%= link_to @user.follower.count, user_follows_path(@user) %> 人</div>
      </div>
      <div class="row mt-3">
        <div class="col-3"></div>
        <div class="col-3 font-weight-bold"><h4><%= @user.name %></h4></div>
        <div class="col-3 mt-2"><%= @user.age %></div>
        <div class="col-3 mt-2"><%= @user.gender %></div>
      </div>
      <div class="row mt-1">
        <div class="col-3"></div>
        <div class="col-6"><%= @user.introduction %></div>
      </div>
      <div class="row mt-3 mb-2">
        <div class="col-3"></div>
        <div class="col-3">
          <% if current_user != @user %>
            <% if current_user.following?(@user) %>
              <%= link_to 'フォロー中', user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
            <% else %>
              <%= link_to 'フォロー', user_relationships_path(@user.id), method: :POST, class: "btn btn-success" %>
            <% end %>
          <% end %>
        </div>
        <div class="col-3">
          <% if current_user != @user && current_user.following?(@user) && @user.following?(current_user) %>
            <%= link_to 'メッセージ', chat_path(@user.id), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-2">
    <% @post.each do |post| %>
      <div class="col-4 text-center mb-4">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 350, 350 %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>