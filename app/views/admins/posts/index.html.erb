<div class="container mt-5">
<% @posts.each do |post| %>
  <div>
    <%= link_to admins_user_path(post.user.id) do %>
      <%= attachment_image_tag post.user, :profile_image, :fill, 100, 100,  format: 'jpeg', fallback: "no_image.jpg" %>
    <% end %>
    <%= link_to admins_post_path(post.id) do %>
      <%= attachment_image_tag post, :image, :fill, 100, 100 %>
    <% end %>
    <p>説明：<%= post.body %></p>
    <p>ユーザーネーム：<%= post.user.name %></p>
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
    <%= link_to "削除", admins_post_path(post), method: :delete %>
  </div>
<% end %>
</div>
