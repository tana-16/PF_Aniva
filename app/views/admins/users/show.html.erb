<div class="container mt-5">
  <div class="row mb-5 border-bottom">
    <div class="col-2">
      <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg", class:"rounded-circle" %>
    </div>
    <div class="col-9">
      <div class="row">
        <%= link_to ' 会員詳細',edit_admins_user_path(@user),class: 'btn btn-outline-primary' %>
      </div>
      <div class="row mt-2">
        <div class="col-3"></div>
        <div class="col-3">投稿 <%= @user.posts.count %> 件</div>
        <div class="col-3">フォロワー <%= @user.followed.count %> 人</div>
        <div class="col-3">フォロー中 <%= @user.follower.count %> 人</div>
      </div>
      <div class="row mt-3">
        <div class="col-3"></div>
        <div class="col-3 font-weight-bold"><h4><%= @user.name %></h4></div>
        <div class="col-3 mt-2"><%= @user.age %></div>
        <div class="col-3 mt-2"><%= @user.gender %></div>
      </div>
      <div class="row mt-1 mb-5">
        <div class="col-3"></div>
        <div class="col-6"><%= @user.introduction %></div>
      </div>
    </div>
  </div>
  <div class="row mt-2">
    <% @post.each do |post| %>
      <div class="col-4 text-center mb-4">
        <%= link_to admins_post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 350, 350 %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>